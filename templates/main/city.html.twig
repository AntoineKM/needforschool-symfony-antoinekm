{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
	</style>

	<div class="example-wrapper">
		<h1>Restaurants</h1>

		<ul>
			{% for restaurant in restaurants %}
				<li><img src={{ restaurant.image }}/><a href="#">{{ restaurant.city.name }}</a>,
					<a href={{path('city', {'id': restaurant.id} )}}>{{ restaurant.name }}</a>
					-
					{{ restaurant.address }}</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
