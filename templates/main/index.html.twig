{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    
    li { display: flex; align-items: center; margin-top: 5px; }
    img { height: 50px; width: 50px; margin-right: 5px; border-radius: 5px; object-fit: cover; }
</style>

<div class="example-wrapper">
    <h1>Restaurants</h1>
    
    <ul>
    {% for restaurant in restaurants %}
        <li><img src={{ restaurant.image }} /><a href="#">{{ restaurant.city.name }}</a>, <a href="#">{{ restaurant.name }}</a> - {{ restaurant.address }}</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
